{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitReturns": false,
        "noImplicitThis": false,
        "noImplicitAny": false,
        "module": "commonjs",
        "target": "es6",
        "jsx": "react",
        "baseUrl": ".",
        "paths": {
            "@app/*": ["src/client/modules/App/*"],
            "@home/*": ["src/client/modules/Home/*"],
            "@comics/*": ["src/client/modules/Comics/*"],
            "@share/*": ["src/client/modules/Share/*"],
            "@not-found/*": ["src/client/modules/NotFound/*"],
            "@redux/*": ["src/client/redux/*"],
            "@config": ["src/client/config/index.ts"],
            "@api-services": ["src/client/api/index.ts"],
            "@doten-config": ["config.ts"]
        }
    },
    "include": [
        "./src/**/*"
    ],
}