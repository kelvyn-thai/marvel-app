{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitReturns": false,
        "noImplicitThis": false,
        "noImplicitAny": false,
        "module": "commonjs",
        "target": "es6",
        "jsx": "react",
        "baseUrl": ".",
        "paths": {
            "App/*": ["src/client/modules/App/*"],
            "Home/*": ["src/client/modules/Home/*"],
            "Comics/*": ["src/client/modules/Comics/*"],
            "Share/*": ["src/client/modules/Share/*"],
            "NotFound/*": ["src/client/modules/NotFound/*"],
            "Redux/*": ["src/client/redux/*"],
            "Config": ["src/client/config/index.ts"],
            "ApiServices": ["src/client/api/index.ts"],
        }
    },
    "include": [
        "./src/**/*"
    ],
}